<%= form_tag posts_path, :method => 'get', :id => "posts_search", :class => "form-search navbar-search pull-right" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <%= text_field_tag :search, params[:search], :class => "search-query", :placeholder => "search for entry" %>
<% end %>
