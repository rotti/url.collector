<table class="table">
  <tr>
    <td colspan="3" class="notice"> 
      <br />
      <% @post.tags.each do |tag| %>
        <% if tag.posts.count == 0 %>
          <% @tag_name = tag.name %>
          <% @tag_count =  " " %>
        <% elsif tag.posts.count > 0 %>
          <% @tag_name = tag.name %>
          <% @tag_count = " ["+ tag.posts.count.to_s + "] " %>
        <% else %>
          <% @tag_name = tag.name %>
          <% @tag_count = " [" + tag.posts.count.to_s + "] " %>
        <% end %>
        <%= link_to @tag_name + @tag_count,
          {:controller => "tags", :action => "show", :id => tag.id}, :class => "btn btn-info btn-primary" %>
      <% end %>
    </td>
  </tr>
</table>
