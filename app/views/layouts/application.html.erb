<!DOCTYPE html>
<html >
  <head>
    <title>url.collector</title>
    <%= favicon_link_tag %>
    <%= stylesheet_link_tag "application", "token-input-facebook", :media => "all" %>
    <%= javascript_include_tag "jquery", "application", "jquery.tokeninput" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body style="container">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <li class="brand">
            <img class="logo" src="/url_collector.png">
            <%= link_to 'url.collector', '/' %>
          </li>
          <ul class="nav">
            <li class="<%= 'active' if params[:controller] == 'posts' %>">
              <%= link_to 'urls', posts_path %>
            </li>
            <li class="<%= 'active' if params[:controller] == 'tags' %>">
              <%= link_to 'tags', tags_path %>
            </li>
          </ul>
          <ul class="nav pull-right">
            <li> <%= render 'posts/search' %> </li>
            <li> <%= link_to 'new entry', new_post_path %> </li>
          </ul>     
        </div>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
