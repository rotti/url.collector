<div class="row">
  <div class="span1"></div>
  <div class="span7" style="background-color: #eef4eb; padding: 8px; border-radius: 8px;">
    <h1>url.collector</h2>
    <p class="lead"> > just a small application your browser should do </p>
  </div>
  <div class="span4" style="background-color: #eef4eb; padding: 8px; border-radius: 8px;" >
    <table class="table-condensed">
      <tr>
        <th width="30%">name</th>
        <th width="70%">url</th>
      </tr>

      <% @last_posts.each do |post| %>
        <tr>
          <td><%= link_to post.name, post, {:rel => "tooltip", :title => "click to show more details for entry: #{post.name}", :data => { :delay => '800' } } %></td>
          <td><%= link_to post.title, post.title, {:target => '_blank', :rel => "tooltip", :title => "open #{post.title}", :data => { :delay => '800' } } %></td>
        </tr>
      <% end %>  
    </table>
  </div>
</div>

<br />
<div class="row">
  <div class="span2"></div>
  <div class="span6" style="text-align: center; background-color: #eef4eb; padding: 8px; border-radius: 8px;">
    <% top_tags(@tag_postcount).each_pair do |tag_id,post_count| %>
      <%= link_to "#{get_tagname(tag_id).name} [#{post_count}]", {:controller => "tags", :action => "show", :id => tag_id}, {:rel => "tooltip", :title => "show other entries attached to tag: #{get_tagname(tag_id).name}", :data => { :delay => '800' }, :class => "btn btn-info btn-mini"} %>
    <% end %>
  </div>
  <div class="span4"></div>
</div>

