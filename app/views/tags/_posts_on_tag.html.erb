<table class="table table-striped">
  <tr>
    <th>name</th>
    <th>url</th>
    <th>description</th>
  </tr>
  <% @tag.posts.each do |post| %>
  <tr>
    <td><%= link_to post.name, post %></td>
    <td><%= link_to post.title, post.title, :target => '_blank' %></td>
    <td><%= link_to post.content, post %></td>
    </td>
  </tr>
  <% end %>
</table>
